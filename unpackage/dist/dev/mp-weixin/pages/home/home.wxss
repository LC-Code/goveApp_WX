	margin: 3rpx 10rpx;
}
.top image {
	width: 100%;
	border-radius: 5%;
}
.top_text {
	width: 100%;
	height: 100%;
	font-size: 60rpx;
	position: absolute;
	top: 0;
	left: 0;
	color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding: 30rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	box-sizing: border-box;
}
